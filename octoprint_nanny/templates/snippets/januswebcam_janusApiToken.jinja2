<div class="control-group" title="{{ _('Janus Gateway Settings') }}">
    <label class="control-label" for="{{template_name}}-janusApiToken">{{ _('Janus API Token') }}</label>
    <div class="controls">
        <div class="input">
            <input type="text" class="input-block-level" data-bind="value: janusApiToken, valueUpdate: 'afterkeydown'" id="{{template_name}}-janusApiToken">
        </div>
        <span class="help-block">
            <p>{% trans %}Leave blank if no Janus Gateway API token is set{% endtrans %}</p>
        </span>
    </div>
</div>
