<!-- hero -->
<div class="row-fluid">
    <a href="https://print-nanny.com"><img src="/plugin/octoprint_nanny/static/img/print_nanny_logo.png"/></a>
    <a target="_blank" href="https://discord.gg/sf23bk2hPr"><button class="btn btn-primary">Join Discord</button></a>
    <a target="_blank" href="https://bitsy-ai.notion.site/Getting-Started-with-Print-Nanny-OS-817bc65297ff44a085120c663dced5f3"><button class="btn btn-secondary">Getting Started Guide</button></a>
    <hr>
{% if plugin_octoprint_nanny_settings.printnanny_version is none %}
        <div class="alert alert-block alert-warning">    
            <h2>
                <strong>Failed to Detect PrintNanny OS Version</strong>
            </h2>
            <h4>Thank you for trying out the OctoPrint Plugin! ðŸ’œ 
            </h4>
            <br>
            <h4>
                Unfortunately, you're not running a supported version of PrintNanny OS.
            </h4>
            <br>
            <a target="_blank" href="https://printnanny.ai"><button class= "btn btn-primary btn-large">Learn More about PrintNanny OS</button></a>
        </div>
</div>
{% else %}
</div>
<form class="form">

    <ul class="nav nav-tabs">
        <li class="active"><a href="#{{template_name}}_basic" data-toggle="tab">{{ _('Basic Settings') }}</a></li>
        <li><a href="#{{template_name}}_advanced" data-toggle="tab">{{ _('Advanced & Debug Settings') }}</a></li>
    </ul>

  <div class="tab-content">
    <div id="{{template_name}}_basic" class="tab-pane active">
      <fieldset>

        <div>
            {% if plugin_octoprint_nanny_settings.printnanny_os.user is undefined %}
            <h2>Log into PrintNanny</h2>
            <a href="{{ plugin_octoprint_nanny_settings.printnanny_os.dash.base_url }}" class="btn btn-primary btn-large">Link Account</a>
            <p>You'll be redirected to another page to log into your PrintNanny account</p>
            {% else %}
            <div class="alert alert-block alert-success">    
                <h3>Logged in as {{ plugin_octoprint_nanny_settings.printnanny_os.user.email }}</h3>
                <br>
                <a target="_blank" href="{{ plugin_octoprint_nanny_settings.printnanny_os.api.base_path }}{{ plugin_octoprint_nanny_settings.printnanny_os.device.dashboard_url }}"><button class= "btn btn-primary btn-large">Manage Device</button></a>
                <a target="_blank" href="#{{template_name}}_advanced" data-toggle="tab"><button class= "btn btn-primary btn-large">View Config</button></a>
            </div>
            {% endif %}
        </div>
      </fieldset>
      </div>
    <div id="{{template_name}}_advanced" class="tab-pane">
<pre>
{{ plugin_octoprint_nanny_settings.printnanny_os }}
</pre>
    </div>

  </div>
</form>
{% endif %}
